{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Day 17",
            "cwd": "${workspaceFolder}/AoC2022",
            "program": "${workspaceFolder}/AoC2022/day17.js",
            "console": "integratedTerminal",
            "request": "launch",
            "skipFiles": ["<node_internals>/**"],
            "type": "node"
        },
        {
            "name": "Launch Heap Perf",
            "cwd": "${workspaceFolder}/common",
            "program": "${workspaceFolder}/common/Heap/heap_performances.js",
            "console": "integratedTerminal",
            "request": "launch",
            "skipFiles": ["<node_internals>/**"],
            "type": "node"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Ex3",
            "cwd": "${workspaceFolder}/MDF2023",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/MDF2023/04_final/ex1_sort_candidates_submissions.js",
            "args": [
                "<",
                "${workspaceFolder}/MDF2023/04_final/candidates_submissions.txt"
            ],
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "Debug Jest Tests",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceRoot}/common/node_modules/jest/bin/jest.js",
                "--runInBand"
            ],
            "cwd": "${workspaceFolder}/common",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
